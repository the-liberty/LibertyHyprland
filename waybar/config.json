{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 8,

  "modules-left": ["custom/app"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["custom/power", "clock"],

  "custom/app": {
    "format": "App",
    "on-click": "wofi --show drun"
  },

  "hyprland/workspaces": {
    "format": "{name}",
    "disable-scroll": true,
    "max-workspaces": 5,
    "on-click": "activate"
  },

  "custom/power": {
    "format": "⏻",
    "on-click": "wlogout"
  },

  "clock": {
    "format": " {:%H:%M}"
  }
}
