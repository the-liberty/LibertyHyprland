{
  "layer": "top",
  "position": "top",
  "height": 20,
  "modules-left": ["custom/workspaces", "custom-app"],
  "modules-center": [],
  "modules-right": ["clock", "custom/power"],

  "custom/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "active": " "
    },
    "sort-by-number": true,
    "persistent-workspaces": {
      "*": 4,
      "HDMI-A-1": 3
    }
  },

  "custom-app": {
    "format": "",
    "tooltip": false
  },

  "custom/power": {
    "format": "⏻",
    "on-click": "systemctl poweroff",
    "tooltip": false
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%A, %d %B %Y}",
    "interval": 1
  }
}
